# Environment Variables Example
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8080
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/workout_db
# Or use POSTGRES_URL for compatibility
# POSTGRES_URL=postgresql://user:password@localhost:5432/workout_db

# JWT Secret (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Email Configuration (Required for password reset)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_FROM=noreply@workoutnote.com

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:8080
# Production: FRONTEND_URL=https://workout-note.vercel.app
